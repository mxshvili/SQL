- Create a Store Database

CREATE TABLE clothing_store (id INTEGER PRIMARY KEY, name TEXT,quantity INTEGER, price INTEGER);
INSERT INTO clothing_store VALUES (1, "Shirts", 5, 20);
INSERT INTO clothing_store VALUES (2, "Pants", 7, 50);
INSERT INTO clothing_store VALUES (3, "Shoes", 10, 100);
INSERT INTO clothing_store VALUES (4, "Belts", 3, 30);
INSERT INTO clothing_store VALUES (5, "Hats", 2, 25);

- Display the database order by price
SELECT * FROM clothing_store ORDER BY price desc;


